{
  "schema": {
    "type": "object",
    "title": "Comment",
    "properties": {
      "name":  {
        "title": "Name",
        "type": "string"
      },
      "email":  {
        "title": "Email",
        "type": "string",
        "pattern": "^\\S+@\\S+$",
        "description": "Email will be used for evil."
      },
      "comment": {
        "title": "Comment",
        "type": "string",
        "maxLength": 20,
        "validationMessage": "Don't be greedy!"
      },
      "hasFavorites": {
        "title": "Add Favorite Things",
        "type": "boolean",
        "default": false
      },
      "favorites": {
        "type": "object",
        "title": "Favorite Things",
        "properties": {
          "color": {
            "title": "Favorite Color",
            "type": "string",
            "validationMessage": "Whats your favorite color!",
            "required": true
          }
        }
      }
    },
    "required": ["name","email","comment"]
  },
  "form": [
    "*",
    {
      "type": "submit",
	    "style": "btn-info",
      "title": "OK"
    }
  ],
  "overrides": [
    {
      "key": "comment",
      "type": "textarea",
      "placeholder": "Make a comment"
    },
    {
      "type": "conditional",
      "condition": "modelData.hasFavorites",
      "items": [
        "favorites"
      ]
    },
    {
      "key": "favorites.color",
      "placeholder": "Your favorite color"
    }
  ]

}
